<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Dashboard" />
    <meta name="apple-mobile-web-app-title" content="Dashboard" />
    <meta name="application-name" content="Dashboard" />
    <!-- <meta name="msapplication-TileColor" content="#da532c" /> -->
    <meta name="theme-color" content="#ffffff" />
        <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <style>
    #login-form {
        background-image: radial-gradient(
            189.96% 61.18% at 50% 38.82%,
            rgba(255, 181, 72, 0) 0%,
            rgba(52, 44, 29, 0.80319) 73.22%,
            #08090a 99.74%
            ),
        url("../../../chapter3/assets/images/main-bg.jpg");
    }

    label{
        color: white;
    }
    </style>
  </head>

  <body id="login-form" class="d-flex">
    <div class="container bg-dark m-auto px-5 py-5 rounded-3">
      <h1 class="text-white text-center">CREATE ROOM OR JOIN</h1>

      <div class="row">
        <div class="col-lg-6 offset-lg-3 text-center pt-4">
            <button id="generate" onclick="generateToken()" class="btn btn-success mb-2">Generate Token</button>
            <form method="get" id="form_id" onsubmit="checkJoinToken()">
                <div class="form-group mb-2">
                    <input type="text" class="form-control text-center" id="token-generated" value="">
                </div>
                <p class="text-light">or Join</p>
                <div class="form-group my-2">
                    <input type="text" class="form-control text-center" id="token-join" placeholder="insert token">
                </div>
                <div id="token-error" class="text-white mb-4"></div>
                <button type="submit" class="btn btn-warning m">START PLAY</button>
            </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script>
        function generateToken() {
            let token = Math.floor(100000 + Math.random() * 900000);
            document.getElementById('token-generated').value = token;
            // var action = document.getElementsByTagName("option")[x].value;
            if (token !== "") {
              document.getElementById("form_id").action = '/api/v1/rps/'+token;
            }
        }

        function checkJoinToken() {
          let token = document.getElementById('token-join').value;
          if (token.length !== 6){
            document.getElementById('token-error').innerText = "Token Salah"
          } else{
            if (token !== "") {
                document.getElementById("form_id").action = '/api/v1/rps/'+token;
            }
          }
        }
    </script>

  </body>
</html>
